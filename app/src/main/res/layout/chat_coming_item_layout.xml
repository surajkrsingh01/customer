<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user"
        android:layout_alignBottom="@+id/relative_message_layout"
        android:elevation="5dp"
        android:src="@drawable/user"
        android:layout_width="@dimen/social_icon_size"
        android:layout_height="@dimen/social_icon_size" />

    <LinearLayout
        android:id="@+id/relative_message_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/grey_border_transparent_background"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_message"
            android:layout_below="@+id/text_name"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/normal_text_size"
            android:text="Hey just hanging around at home.."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/message_time"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/relative_message_layout"
        android:layout_alignRight="@+id/relative_message_layout"
        android:text="12:40"
        android:textSize="@dimen/very_small_text_size"
        android:layout_marginLeft="5dp"
        android:textColor="@color/ternary_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>