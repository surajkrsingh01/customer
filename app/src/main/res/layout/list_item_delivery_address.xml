<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="?attr/backgroundColor"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/linear_eidt"
                android:orientation="horizontal"
                android:layout_centerVertical="true">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_default_address"
                    android:text="Default Address"
                    android:textColor="?attr/primaryTextColor"
                    app:buttonTint="?attr/primaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear_eidt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_edit"
                    android:src="@drawable/edit"
                    android:tint="@color/green700"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_delete"
                    android:src="@drawable/delete"
                    android:tint="@color/green700"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/relative_address_layout"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_cust_name"
                android:textSize="@dimen/list_header_text_size"
                android:text="Suraj Kumar"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/text_house"
                android:textSize="@dimen/list_desc_text_size"
                android:text="F 50 "
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text_address"
                android:textSize="@dimen/list_desc_text_size"
                android:text="Jawahar Park"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_landmark"
                android:textSize="@dimen/list_desc_text_size"
                android:text="Near Shiv Mandir"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_city_state_pin"
                android:textSize="@dimen/list_desc_text_size"
                android:text="Khanpur, New Delhi 110062"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text_mobile"
                android:textSize="@dimen/list_desc_text_size"
                android:text="Mobile: 9958736910"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="5dp"
                android:background="?attr/separatorColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>
